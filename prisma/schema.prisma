generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

enum Category {
  INCOME
  OUTCOME
}

model Transaction {
  id          Int       @id @default(autoincrement())
  description String
  amount      Float
  category    Category
  user_id     Int
  user        User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  date        DateTime?
  group       String?
}
